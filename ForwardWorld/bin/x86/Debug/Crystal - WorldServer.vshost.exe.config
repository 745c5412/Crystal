    <add key="WelcomeMessageColor" value="#009a13"/>
    <add key="AdsMessageColor" value="#8904B1"/>
    <add key="WelcomeMessage" value="Bienvenue sur le serveur Forward"/>
    <add key="MonsterCanDoRandomMove" value="true"/>
    <add key="EnableDropItems" value="true"/>
    
    <!-- Guild Settings -->
    <add key="EnableGuildCreationLocation" value="true"/>
    <add key="GuildCreatorObjectRequired" value="1575"/>
    <add key="GuildConnectionAdvert" value="true"/>
    <add key="SkipGuildsRestrictions" value="true"/>

    <!-- Mount Settings -->
    <add key="EnableMounts" value="true"/>
    <add key="MountStartLevel" value="100"/>
    <add key="MountStatsRate" value="1"/>
    <add key="MountBaseName" value="Arkalia-Drago"/>
    <add key="EnablePetsOnMounts" value="true"/>
    <add key="MountLostEnergy" value="false"/>

    <!-- Fight Settings -->
    <add key="MaxPlacementsPlacesPerTeam" value="8"/>
